@model IEnumerable<NaviItem>

<nav id="sidebar" role="navigation" data-step="2" data-intro="Template has <b>many navigation styles</b>" data-position="right" class="navbar-default navbar-static-side" style="min-height: 100%;">
    <div class="sidebar-collapse menu-scroll" style="height: auto; overflow: hidden;">
        <ul id="side-menu" class="nav">
            <div class="clearfix"></div>
            @foreach (var naviItem in Model)
            {
                if (naviItem.IsActive)
                {
                    <li class="active">
                        <a href="@naviItem.Url">
                            <i class="fa fa-bar-chart-o fa-fw">
                                <div class="icon-bg bg-orange"></div>
                            </i><span class="menu-title">@naviItem.Title</span>
                        </a>
                    </li>
                }
                else
                {
                    <li>
                        <a href="@naviItem.Url">
                            <i class="fa fa-edit fa-fw">
                                <div class="icon-bg bg-violet"></div>
                            </i><span class="menu-title">@naviItem.Title</span>
                        </a>
                    </li>
                }
            }

        </ul>
    </div>
</nav>