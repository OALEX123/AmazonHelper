<script type="text/ng-template" id="manageProductModal">
    <div class="modal-header">
        <h3 class="modal-title">Manage product</h3>
    </div>
    <form class="form-horizontal" name="productForm" role="form" novalidate ng-submit="submitProductForm()">
        <div class="modal-body">

            <div class="form-group">
                <label class="col-sm-3 control-label">Asin</label>
                <div class="col-sm-9 controls">
                    <div class="row">
                        <div class="col-xs-9">
                            <input type="text" placeholder="enter asin" name="asin" class="form-control" ng-model="product.asin" required />
                            <div ng-show="productForm.$submitted && productForm.asin.$error.required" role="alert" style="height:20px;" class="bg-danger">
                                <p class="bg-danger" style="padding: 5px;">Field is required.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Product Name</label>
                <div class="col-sm-9 controls">
                    <div class="row">
                        <div class="col-xs-9">
                            <input type="text" placeholder="enter product Name" name="productName" class="form-control" ng-model="product.productName" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Group</label>
                <div class="col-sm-9 controls">
                    <div class="row">
                        <div class="col-xs-9">
                            <select class="form-control" name="groupId" ng-model="product.groupId" ng-options="group.groupId as group.groupName for group in productGroups" required></select>
                            <div ng-show="productForm.$submitted && productForm.groupId.$error.required" role="alert" style="height:20px;" class="bg-danger">
                                <p class="bg-danger" style="padding: 5px;">Field is required.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Is Active</label>
                <div class="col-sm-9 controls">
                    <div class="row">
                        <div class="col-xs-9">
                            <input type="checkbox" name="isActive" ng-model="product.isActive" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label">Notify</label>
                <div class="col-sm-9 controls">
                    <div class="row">
                        <div class="col-xs-9">
                            <input type="checkbox" name="isActive" ng-model="product.isNotificationEnabled" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <input class="btn btn-primary" type="submit" value="Save" />
            <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
    </form>
</script>


