@{
    ViewBag.Title = "Settings";
    Layout = "../Shared/_Layout.cshtml";

    ViewBag.SideNaviItems = new List<NaviItem>
    {
        new NaviItem {Title = "Statistics", Url = Url.Action("Index", "Stats")},
        new NaviItem {Title = "Products", Url = Url.Action("Index", "Product")},
        new NaviItem {Title = "Settings", IsActive = true},
        new NaviItem {Title = "Logs", Url = Url.Action("Index", "Log")}
    };

    ViewBag.BreadCrumbs = new List<NaviItem>
    {
        new NaviItem {Title = "Home"},
        new NaviItem {Title = "Settings", IsActive = true}
    };
}

<script type="text/javascript">
    var routings = {
        getSettingsUrl: '@Url.Action("GetCommonSettings", "Settings")',
        saveSettingsUrl: '@Url.Action("SaveCommonSettings", "Settings")'
    };
</script>

<!--BEGIN CONTENT-->
<div class="page-content">
    <div id="tab-general">
        <div class="row mbl">
            <div class="col-lg-12">
                <div class="col-md-12">
                    <div class="col-md-12">
                        <ul class="nav nav-tabs"></ul>
                        <div id="generalTabContent" class="tab-content" ng-app="settingsManagementApp" ng-controller="SettingsController as settingsCtrl" ng-cloak>
                            <div id="tab-edit" class="tab-pane fade in active">
                                <form action="#" class="form-horizontal">
                                    <h3>Common Settings</h3>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Company Name</label>

                                        <div class="col-sm-9 controls">
                                            <div class="row">
                                                <div class="col-xs-9">
                                                    <input type="text" placeholder="companyName" class="form-control" ng-model="settingsCtrl.settings.companyName">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label">Email</label>
                                        <div class="col-sm-9 controls">
                                            <div class="row">
                                                <div class="col-xs-9">
                                                    <input type="email" placeholder="email@yourcompany.com" class="form-control" ng-model="settingsCtrl.settings.email">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label"></label>
                                        <div class="col-sm-9 controls">
                                            <button style="width: 150px;" type="submit" class="btn btn-blue btn-block" ng-click="settingsCtrl.saveSettings()">Save</button>
                                        </div>
                                    </div>
                                    <hr>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--END CONTENT-->
@section scripts{
    @Url.CombresLink("settingsJs")
}
